    <context-param>
        <param-name>customerRepairRequestNewUrl</param-name>
        <param-value>/RepairAgency/customer/repair-request/new</param-value>
    </context-param>
    <context-param>
        <param-name>customerRepairRequestViewUrl</param-name>
        <param-value>/RepairAgency/customer/repair-request/view</param-value>
    </context-param>
    <context-param>
        <param-name>customerRepairRequestEditDescriptionUrl</param-name>
        <param-value>/RepairAgency/customer/repair-request/edit-description</param-value>
    </context-param>
    <context-param>
        <param-name>customerMasterViewUrl</param-name>
        <param-value>/RepairAgency/customer/master/view</param-value>
    </context-param>
    <context-param>
        <param-name>customerMasterListUrl</param-name>
        <param-value>/RepairAgency/customer/master/list</param-value>
    </context-param>
    <context-param>
