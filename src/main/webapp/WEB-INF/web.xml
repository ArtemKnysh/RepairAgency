    </context-param>
    <context-param>
        <param-name>managerLogoutUrl</param-name>
        <param-value>/RepairAgency/common/logout</param-value>
    </context-param>
    <!--    MASTER URLs    -->
    <context-param>
        <param-name>masterUserEditUrl</param-name>
        <param-value>/RepairAgency/common/user/edit</param-value>
    </context-param>
    <context-param>
        <param-name>masterCustomerViewUrl</param-name>
        <param-value>/RepairAgency/master/customer/view</param-value>
    </context-param>
    <context-param>
        <param-name>masterCustomerListUrl</param-name>
        <param-value>/RepairAgency/master/customer/list</param-value>
    </context-param>
    <context-param>
        <param-name>masterRepairRequestListUrl</param-name>
        <param-value>/RepairAgency/master/repair-request/list</param-value>
    </context-param>
    <context-param>
        <param-name>masterRepairRequestViewUrl</param-name>
        <param-value>/RepairAgency/master/repair-request/view</param-value>
