<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Repair Agency</display-name>
    <!--    Error pages    -->
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/pages/common/errors/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/pages/common/errors/error-404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/common/errors/error-500.jsp</location>
    </error-page>
    <!--    Resources    -->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/repair_agency</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!--    Filters    -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.epam.rd.java.basic.repairagency.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.epam.rd.java.basic.repairagency.web.filter.SecurityFilter</filter-class>
    </filter>
    <!--    Filters Mapping    -->
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--    CONFIG    -->
    <context-param>
        <param-name>appName</param-name>
        <param-value>/RepairAgency</param-value>
    </context-param>
    <context-param>
        <param-name>commandsImplPackageName</param-name>
        <param-value>com.epam.rd.java.basic.repairagency.web.command.impl</param-value>
    </context-param>
    <context-param>
        <param-name>rootPackageName</param-name>
        <param-value>com.epam.rd.java.basic.repairagency</param-value>
    </context-param>
    <!--    COMMON URLs    -->
    <context-param>
        <param-name>loginUrl</param-name>
        <param-value>/RepairAgency/login</param-value>
    </context-param>
    <context-param>
        <param-name>registrationUrl</param-name>
        <param-value>/RepairAgency/registration</param-value>
    </context-param>
    <!--    ADMIN URLs    -->
    <context-param>
        <param-name>adminUserListUrl</param-name>
        <param-value>/RepairAgency/admin/user/list</param-value>
    </context-param>
    <context-param>
        <param-name>adminUserSetRoleUrl</param-name>
        <param-value>/RepairAgency/admin/user/set-role</param-value>
    </context-param>
    <context-param>
        <param-name>adminLogoutUrl</param-name>
        <param-value>/RepairAgency/common/logout</param-value>
    </context-param>
    <!--    CUSTOMER URLs    -->
    <context-param>
        <param-name>customerUserEditUrl</param-name>
        <param-value>/RepairAgency/common/user/edit</param-value>
    </context-param>
    <context-param>
        <param-name>customerUserViewUrl</param-name>
        <param-value>/RepairAgency/common/user/view</param-value>
    </context-param>
    <context-param>
        <param-name>customerTopUpAccountUrl</param-name>
        <param-value>/RepairAgency/common/user/account/top-up</param-value>
    </context-param>
    <context-param>
        <param-name>customerRepairRequestListUrl</param-name>
        <param-value>/RepairAgency/customer/repair-request/list</param-value>
    </context-param>
    <context-param>
        <param-name>customerRepairRequestEditUrl</param-name>
        <param-value>/RepairAgency/customer/repair-request/edit</param-value>
    </context-param>
    <context-param>
