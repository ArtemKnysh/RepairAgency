    </context-param>
    <context-param>
        <param-name>customerCustomerListUrl</param-name>
        <param-value>/RepairAgency/customer/customer/list</param-value>
    </context-param>
    <context-param>
        <param-name>customerLogoutUrl</param-name>
        <param-value>/RepairAgency/common/logout</param-value>
    </context-param>
    <!--    MANAGER URLs    -->
    <context-param>
        <param-name>managerUserEditUrl</param-name>
        <param-value>/RepairAgency/common/user/edit</param-value>
    </context-param>
    <context-param>
        <param-name>managerUserViewUrl</param-name>
        <param-value>/RepairAgency/common/user/view</param-value>
    </context-param>
    <context-param>
        <param-name>managerTopUpAccountUrl</param-name>
        <param-value>/RepairAgency/common/user/account/top-up</param-value>
    </context-param>
    <context-param>
        <param-name>managerRepairRequestListUrl</param-name>
        <param-value>/RepairAgency/manager/repair-request/list</param-value>
